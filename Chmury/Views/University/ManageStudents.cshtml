@model Chmury.Models.ManageStudentsDto
<div class="content">
    <div>
        <h2>Istniejący studenci</h2>
        <table>
            <thead>
            <th>Imię i nazwisko</th>
            <th>Uczelnia</th>
            <th>Zobacz kursy studenta</th>
            </thead>
            <tbody>
            @foreach (var s in Model.Students)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.UniversityName</td>
                    <td class="btn" onclick="getStudentCourses(`@s.UniversityName`,  `@s.Name`)">Zobacz</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div>
        <h2 class="see-results__heading"></h2>
        <ul class="see-results"></ul>
        <div class="see-results__error"></div>
    </div>
</div>
<h2>Dodaj studenta</h2>
<form>
    <div>
        <label for="student-name">Imię i nazwisko</label>
        <input id="student-name" name="student-name" class="student-name"/>
    </div>
    <div>
        <label for="university">Uczelnia</label>
        <select id="university" name="university", class="university">
            @foreach (var u in Model.Universities)
            {
                <option value="@u.Name">@u.Name</option>
            }
        </select>
    </div>
    <span class="error"></span>
    <button onclick="createStudent()">Dodaj</button>
    <div>
        <span class="response-info"></span>
    </div>
</form>
<h2>Zapisz studenta do kursu</h2>
<form>
    <div>
        <label for="student">Imię i nazwisko studenta</label>
        <select id="student" name="student" class="student">
            @foreach (var s in Model.Students)
            {
                <option value="@s.Name-@s.UniversityName">@s.Name - @s.UniversityName</option>
            }
        </select>
    </div>
    <div>
        <label for="course">Nazwa kursu</label>
        <select id="course" class="course" name="course">
            @foreach (var c in Model.Courses)
            {
                <option value="@c.Name-@c.UniversityName">@c.Name - @c.UniversityName</option>
            }
        </select>
    </div>
    <button onclick="assignStudentToCourse()">Zapisz</button>
</form>